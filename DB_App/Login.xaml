<Window x:Class="DB_App.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DB_App"
        mc:Ignorable="d"
        Title="Login" Height="300" Width="300" FontSize="14" Background="BlueViolet">


    <Border Background="Green" CornerRadius="20" Margin="20">
        <StackPanel>

            <Label Content="Zaloguj się" HorizontalAlignment="Left" Margin="75,0,0,0" VerticalAlignment="Top" Width="136" FontSize="20"/>

            <Label Content="Login:" HorizontalAlignment="Left" Margin="26,20,5,0" VerticalAlignment="Top" Width="100" FontSize="16"/>
            <TextBox x:Name="login" HorizontalAlignment="Left" Height="23" Margin="30,0,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="100"/>
            <Label Content="Haslo:" HorizontalAlignment="Left" Margin="26,5,-126,0" VerticalAlignment="Top" Width="100" FontSize="16"/>
            <PasswordBox x:Name="haslo" HorizontalAlignment="Left" Margin="30,5,-188,0" VerticalAlignment="Top" Width="100"/>
            <Button Content="Zaloguj" Click="Button_Click" Margin="2,10,2,0" Height="28" />
        </StackPanel>
    </Border>



</Window>
